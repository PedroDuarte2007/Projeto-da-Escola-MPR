    <script>
        document.addEventListener('DOMContentLoaded', () => {
    
    function atualizarMedias() {
        const tabela = document.querySelector('table tbody');
        const linhas = tabela.querySelectorAll('tr');

        linhas.forEach(linha => {
            const atividades = parseFloat(linha.cells[4].textContent);
            const prova = parseFloat(linha.cells[5].textContent);

            if (!isNaN(atividades) && !isNaN(prova)) {
                const media = (atividades + prova) / 2;
                linha.cells[6].textContent = media.toFixed(1);
            }
        });
    }

    
    atualizarMedias();
});
    </script>
